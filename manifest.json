{
  "manifest_version": 3,
  "name": "Luma – Voice Assistant for Accessibility",
  "version": "2.0",
  "description": "Hands-free voice assistant by Luma for blind and visually impaired users. Navigate any website, control media, and read pages — all by voice.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-assistant": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Luma voice assistant"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Luma Voice Assistant"
  }
}
